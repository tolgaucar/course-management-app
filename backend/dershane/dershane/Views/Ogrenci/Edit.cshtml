@model Ogrenci

@{
    ViewData["Title"] = "Öğrenci Düzenleme";
    ViewData["Style"] = "student.css";
    Layout = "_DashboardLayout";
}

<section class="main">
    <div class="container">
        <div class="row">
            <div class="eight columns">
                <h2>Öğrenci Düzenleme</h2>
                <form method="post" asp-action="EditOgrenci">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="OgrenciAdiSoyadi"></label>
                        <input asp-for="OgrenciAdiSoyadi" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="TelefonNo"></label>
                        <input asp-for="TelefonNo" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="OgrenciMailAdresi"></label>
                        <input asp-for="OgrenciMailAdresi" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</section>
